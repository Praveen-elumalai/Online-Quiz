@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>adminpanel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <div class="container">
       

        @using (Html.BeginForm ("login", "intermediate", FormMethod.Post))
        {
            <div class="row justify-content-center">
                <div class="col-4"></div>
                <div class="col-4">
                   <h4>ADMIN LOGIN </h4>
                </div>
                <div class="col-4"></div>

            </div>
          
            
            <div class="row mt-2">
                <div class="col-4">
                    <div class="float-end">@Html.Label("Email")</div>
                </div>
                <div class="col-4">
                    <input type="text" name="mail"  class="form-control"  placeholder="Enter Your Email" />
                </div>
                <div class="col-4"></div>
            </div>
            
            <div class="row mt-2">
                <div class="col-4">
                    <div class="float-end">@Html.Label("Password")</div>
                </div>
                <div class="col-4">
                    <input type="password" name="password"  class="form-control" placeholder="Enter Your Password" />
                </div>
                <div class="col-4"></div>
            </div>
            
            <div class="row mt-2">
                <div class="col-4"></div>
                <div class="col-4">
                    <button type="submit" id="btn" class="btn btn-primary">Login</button>
                </div>
                <div class="col-4"></div>
            </div>
        }
          @if (ViewBag.ErrorMessage != null)
    {
         <div class="d-flex justify-content-center align-items-center">
        <div class="text-center" style="color: red;">
            @ViewBag.ErrorMessage
        </div>
    </div>
    }
    </div>
</body>
</html>
