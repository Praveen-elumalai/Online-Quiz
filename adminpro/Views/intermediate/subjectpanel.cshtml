@{
    Layout = "~/Views/intermediate/webview.cshtml";
    var grid = new WebGrid(Model);
    }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>subjectpanel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="path/to/your/styles.css" />

    <style>
        .center-grid-container {
    display:block;
    margin-top:20PX;
    margin-left:auto;
     margin-right: auto;
       width: 50%;
       text-align:center;
}
    </style>
</head>
<body>

    @using (Html.BeginForm("post", "intermediate", FormMethod.Post))
    {
        <div class="row justify-content-center">
            <div class="col-4"></div>
            <div class="col-4">
                <h4>CREATE SUBJECT</h4>
            </div>
            <div class="col-4"></div>

        </div>
          
 
        <div class="row mt-2">
            <div class="col-4">
                <div class="float-end">@Html.Label("Subject Name")</div>
            </div>

            <div class="col-4">
                <input type="text" id="subjectname" name="subjectname" class="form-control" />
            </div>
            <div class="col-4"></div>
        </div>  
        
        <div class="row mt-2">
            <div class="col-4"></div>
            <div class="col-4">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            <div class="col-4"></div>
        </div>
        
    } 


 <div class="center-grid-container">

        @grid.GetHtml(
     tableStyle: "table table-striped table-bordered",
      headerStyle: "thead-dark",
     columns: new[]{
          grid.Column("Subject_Name","Subjects")
         
     })
        
       
    </div>
      
   
</body>
</html>
