@{
    Layout = "~/Views/intermediate/webview.cshtml";
    var grid = new WebGrid(Model, canSort: false, rowsPerPage: 10);
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Quizz</title>
    <style>
        .center-grid-container {
    display:block;
    margin-top:20PX;
    margin-left:auto;
     margin-right: auto;
       width: 70%;
}
    </style>
</head>
<body>
      @using (Html.BeginForm("savequiz", "intermediate", FormMethod.Post))
        {
          
        <div class="row mt-2">
            <div class="col-4">
                <div class="float-end"> <b>@Html.Label("QUIZ")</b>
                </div>
            </div>

            <div class="col-4">
                <input type="text" id="quiz" name="quiz" class="form-control" />
            </div>
            <div class="col-4"></div>
        </div>  
          <br />
    <div class="row mt-2">
            <div class="col-4">
                <div class="float-end"> <b>@Html.Label("Duration")</b>
                </div>
            </div>

            <div class="col-4">
                <input type="text" id="duration" name="duration" class="form-control" 
                    required-pattern="[0-9]{2}:[0-9]{2}" value="00:00" title="write a duration in the format hh:mm"/>
            </div>
            <div class="col-4"></div>
        </div>  
          <br />
           <div class="row mt-2">
            <div class="col-4">
                <div class="float-end"> <b>@Html.Label("Questions Count")</b>
                </div>
            </div>

            <div class="col-4">
                <input type="text" id="count" name="count" class="form-control" />
            </div>
            <div class="col-4"></div>
        </div> 
          
          <div class="row mt-2">
               <div class="col-4"></div>    
               <div class="col-4"> <button type="submit" class="btn btn-primary">Create</button></div>   
            <div class="col-4"></div>
              </div>
          
    }
      }
</body>
</html>
