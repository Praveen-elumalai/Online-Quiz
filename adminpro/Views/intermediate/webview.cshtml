            <li><a href="~/intermediate/ViewQuizz">View Quizz</a> </li>
            <li>@Html.ActionLink("Logout", "Logout", "intermediate")</li>
        </ul>
    </div>

   <div class="container">@RenderBody()</div>
     


</body>
